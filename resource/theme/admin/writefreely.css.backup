/* Solitudes Admin - WriteFreely Inspired Flat Design */
/* Minimal custom styles - using Tailwind CSS for most styling */

:root {
  --wf-primary: #3b5998;
  --wf-primary-dark: #2d4373;
  --wf-success: #5cb85c;
  --wf-warning: #f0ad4e;
  --wf-danger: #d9534f;
  --wf-text: #333;
  --wf-text-light: #666;
  --wf-text-muted: #999;
  --wf-bg: #fafafa;
  --wf-bg-white: #fff;
  --wf-border: #e0e0e0;
  --wf-focus: #667eea;
}

* {
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 15px;
  line-height: 1.6;
  color: var(--wf-text);
  background: var(--wf-bg);
  margin: 0;
  padding: 0;
}

/* Top Navigation Bar */
.admin-topnav {
  background: var(--wf-bg-white);
  border-bottom: 1px solid var(--wf-border);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  height: 60px;
}

.admin-topnav-inner {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 2rem;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.admin-logo {
  font-size: 1.25rem;
  font-weight: 500;
  color: var(--wf-text);
  text-decoration: none;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.admin-logo:hover {
  color: var(--wf-primary);
}

.admin-nav-links {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  list-style: none;
  margin: 0;
  padding: 0;
}

.admin-nav-links a {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  color: var(--wf-text-light);
  text-decoration: none;
  border-radius: 4px;
  transition: all 0.2s;
  font-size: 0.9rem;
}

.admin-nav-links a:hover {
  background: var(--wf-bg);
  color: var(--wf-text);
}

.admin-nav-links a.active {
  background: var(--wf-primary);
  color: white;
}

.admin-nav-links i {
  font-size: 1.1rem;
}

.admin-user-menu {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.admin-user-info {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.5rem 1rem;
  border-radius: 4px;
  cursor: pointer;
  transition: background 0.2s;
}

.admin-user-info:hover {
  background: var(--wf-bg);
}

.admin-user-avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: var(--wf-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 600;
  font-size: 0.85rem;
}

/* Main Content Area */
.admin-main {
  margin-top: 60px;
  min-height: calc(100vh - 60px);
}

.admin-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 2rem;
}

.admin-container-narrow {
  max-width: 900px;
  margin: 0 auto;
  padding: 2rem;
}

/* Page Header */
.page-header {
  margin-bottom: 2rem;
}

.page-title {
  font-size: 1.75rem;
  font-weight: 300;
  color: var(--wf-text);
  margin: 0 0 0.5rem 0;
}

.page-subtitle {
  color: var(--wf-text-muted);
  font-size: 0.95rem;
  margin: 0;
}

/* Editor Focus Mode */
.editor-container {
  background: var(--wf-bg-white);
  border: 1px solid var(--wf-border);
  border-radius: 4px;
  padding: 2rem;
  margin-bottom: 2rem;
}

.editor-minimal {
  border: none;
  background: transparent;
}

.editor-minimal .form-control {
  border: none;
  border-bottom: 1px solid var(--wf-border);
  border-radius: 0;
  padding-left: 0;
  padding-right: 0;
  font-size: 1.1rem;
}

.editor-minimal .form-control:focus {
  border-bottom-color: var(--wf-primary);
  box-shadow: none;
}

.editor-title-input {
  font-size: 2rem;
  font-weight: 300;
  border: none;
  border-bottom: 1px solid var(--wf-border);
  padding: 0.5rem 0;
  margin-bottom: 1.5rem;
}

.editor-title-input:focus {
  outline: none;
  border-bottom-color: var(--wf-primary);
}

/* Cards */
.wf-card {
  background: var(--wf-bg-white);
  border: 1px solid var(--wf-border);
  border-radius: 4px;
  margin-bottom: 1.5rem;
  overflow: hidden;
}

.wf-card-header {
  padding: 1rem 1.5rem;
  border-bottom: 1px solid var(--wf-border);
  font-weight: 500;
  background: var(--wf-bg);
}

.wf-card-body {
  padding: 1.5rem;
}

/* Tables */
.wf-table {
  width: 100%;
  border-collapse: collapse;
  font-size: 0.95rem;
}

.wf-table th {
  text-align: left;
  padding: 0.75rem 1rem;
  border-bottom: 2px solid var(--wf-border);
  font-weight: 500;
  color: var(--wf-text-light);
  font-size: 0.85rem;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.wf-table td {
  padding: 0.75rem 1rem;
  border-bottom: 1px solid var(--wf-border);
}

.wf-table tbody tr:hover {
  background: var(--wf-bg);
}

/* Stats Cards */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.stat-card {
  background: var(--wf-bg-white);
  border: 1px solid var(--wf-border);
  border-radius: 4px;
  padding: 1.5rem;
  text-align: center;
}

.stat-value {
  font-size: 2.5rem;
  font-weight: 300;
  color: var(--wf-text);
  margin: 0;
}

.stat-label {
  font-size: 0.85rem;
  color: var(--wf-text-muted);
  margin: 0.5rem 0 0 0;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Help Text */
.help-text {
  font-size: 0.875rem;
  color: var(--wf-text-muted);
  margin-top: 0.25rem;
}

.help-block {
  background: #f8f9fa;
  border-left: 3px solid var(--wf-primary);
  padding: 1rem;
  margin: 1rem 0;
  border-radius: 0 4px 4px 0;
}

.help-block-warning {
  border-left-color: var(--wf-warning);
  background: #fff9f0;
}

.help-block-info {
  border-left-color: #5bc0de;
  background: #f0f8ff;
}

/* Topic Badge */
.topic-badge {
  display: inline-flex;
  align-items: center;
  padding: 0.25rem 0.75rem;
  background: #e3f2fd;
  color: #1976d2;
  border-radius: 12px;
  font-size: 0.85rem;
  font-weight: 500;
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .admin-topnav-inner {
    padding: 0 1rem;
  }

  .admin-nav-links {
    display: none;
  }

  .admin-container,
  .admin-container-narrow {
    padding: 1rem;
  }

  .stats-grid {
    grid-template-columns: 1fr;
  }

  .page-title {
    font-size: 1.5rem;
  }
}

/* Loading State */
.loading-overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  align-items: center;
  justify-content: center;
}

.loading-overlay.active {
  display: flex;
}

.loading-spinner {
  border: 4px solid rgba(255, 255, 255, 0.3);
  border-top: 4px solid white;
  border-radius: 50%;
  width: 50px;
  height: 50px;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Vditor adjustments */
.vditor {
  border: 1px solid var(--wf-border) !important;
  border-radius: 4px !important;
}

.vditor-toolbar {
  background: var(--wf-bg) !important;
}
